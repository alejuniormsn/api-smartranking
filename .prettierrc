{
  "semi": true,
  "singleQuote": false,
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "auto",
  "jsxSingleQuote": false,
  "bracketSameLine": false,
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "bracketSpacing": true,
        "bracketSameLine": false,
        "singleAttributePerLine": true
      }
    }
  ]
}
